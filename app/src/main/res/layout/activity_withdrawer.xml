<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Withdrawer" android:background="@android:color/holo_blue_dark">

    <TextView
            android:text="Are you Sure?"
            android:layout_width="299dp"
            android:layout_height="65dp"
            android:id="@+id/Sure" android:textSize="40dp"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="155dp"
            android:layout_marginBottom="61dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/InputText" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="비밀번호를 입력해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InputText" android:textSize="18sp"
            android:textColor="?attr/colorBackgroundFloating"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/Sure"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/editText"/>
    <EditText
            android:layout_width="239dp"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@android:color/background_light" android:hint="      password"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            app:layout_constraintStart_toStartOf="@+id/InputText"
            android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/InputText"
            android:layout_marginBottom="85dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:drawableLeft="@drawable/ic_menu_manage"/>
    <Button
            android:text="탈퇴"
            android:layout_width="173dp"
            android:layout_height="0dp"
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button" android:background="@color/design_default_color_primary_dark"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="106dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="254dp"/>
</android.support.constraint.ConstraintLayout>